<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="gdrive-core-credentialLoader" class="net.czpilar.gdrive.core.credential.loader.CredentialLoader" />

    <alias alias="gDriveCoreCredentialLoader" name="gdrive-core-credentialLoader" />

    <bean id="gdrive-core-gDriveSetting" class="net.czpilar.gdrive.core.setting.GDriveSetting">
        <constructor-arg name="applicationName" value="gdrive" />
        <constructor-arg name="applicationVersion" value="${gdrive.version}" />
        <constructor-arg name="clientId" value="${gdrive.core.drive.clientId}" />
        <constructor-arg name="clientSecret" value="${gdrive.core.drive.clientSecret}" />
        <constructor-arg name="redirectUri" value="${gdrive.core.drive.redirectUri}" />
        <constructor-arg name="scopes">
            <list>
                <value>https://www.googleapis.com/auth/drive</value>
            </list>
        </constructor-arg>
    </bean>

    <alias alias="gDriveCoreGDriveSetting" name="gdrive-core-gDriveSetting" />

</beans>