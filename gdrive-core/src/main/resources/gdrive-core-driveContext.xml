<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="gdrive-core-httpTransport" class="com.google.api.client.http.javanet.NetHttpTransport" />

    <bean id="gdrive-core-jsonFactory" class="com.google.api.client.json.jackson2.JacksonFactory" />

    <bean id="gdrive-core-authorizationCodeFlowBuilder"
          class="com.google.api.client.googleapis.auth.oauth2.GoogleAuthorizationCodeFlow$Builder">
        <constructor-arg name="transport" ref="gdrive-core-httpTransport" />
        <constructor-arg name="jsonFactory" ref="gdrive-core-jsonFactory" />
        <constructor-arg name="clientId" value="#{gDriveCoreGDriveSetting.clientId}" />
        <constructor-arg name="clientSecret" value="#{gDriveCoreGDriveSetting.clientSecret}" />
        <constructor-arg name="scopes" value="#{gDriveCoreGDriveSetting.scopes}" />
        <property name="credentialCreatedListener">
            <bean class="net.czpilar.gdrive.core.listener.CredentialSaverListener" />
        </property>
    </bean>

    <bean id="gdrive-core-authorizationCodeFlow"
          class="com.google.api.client.googleapis.auth.oauth2.GoogleAuthorizationCodeFlow">
        <constructor-arg ref="gdrive-core-authorizationCodeFlowBuilder" />
    </bean>

    <bean id="gdrive-core-googleCredentialBuilder"
          class="com.google.api.client.googleapis.auth.oauth2.GoogleCredential$Builder">
        <property name="transport" ref="gdrive-core-httpTransport" />
        <property name="jsonFactory" ref="gdrive-core-jsonFactory" />
        <property name="clientAuthentication">
            <bean class="com.google.api.client.auth.oauth2.ClientParametersAuthentication">
                <constructor-arg name="clientId" value="#{gDriveCoreGDriveSetting.clientId}" />
                <constructor-arg name="clientSecret" value="#{gDriveCoreGDriveSetting.clientSecret}" />
            </bean>
        </property>
    </bean>

    <bean id="gdrive-core-drive" class="com.google.api.services.drive.Drive" scope="prototype">
        <constructor-arg>
            <bean class="com.google.api.services.drive.Drive$Builder">
                <constructor-arg index="0" ref="gdrive-core-httpTransport" />
                <constructor-arg index="1" ref="gdrive-core-jsonFactory" />
                <constructor-arg index="2" value="#{gDriveCoreCredentialLoader.credential}" />
                <property name="applicationName" value="#{gDriveCoreGDriveSetting.applicationName}" />
            </bean>
        </constructor-arg>
    </bean>

</beans>